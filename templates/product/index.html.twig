{% extends 'base.html.twig' %}

{% block title %}Art de chiner - Objets en vente actuellement{% endblock %}

{% block content %}


<div class="row">
    <div class="col-md-2">
        <h2>Catégories</h2> 
        {% for category in categoriesList %}
        <a href="{{ path('app_category', {'id':category.id} ) }}">{{ category.name }}</a>
        <br>
        {% endfor %}      
    </div>
    <div class="col-md-10">
        <h2>Nos objets anciens</h2>
        <div class="row">
            {% for product in productsList %}
                <div class="col-md-4">
                    <div class="product-item text-center">
                        <a href="{{ path ('app_product', {'slug': product.slug} ) }}"><img src="/uploads/{{ product.picture }}" alt="{{ product.name }}" class="img-fluid"></a>
                        <h5>{{ product.name }}</h5>
                        <span class="product-subtitle">{{product.subtitle}}</span>
                        <span class="product-price">{{ (product.price /100) |number_format (2) }} €</span>
                    </div>    
                </div>     
            {% endfor %}
        </div>
    </div>
</div>
<hr>
{% endblock %}
